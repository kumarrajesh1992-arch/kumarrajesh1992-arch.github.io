{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "The Capacity Paradox: Index Scores vs. Residual HDI",
    "subtitle": "Comparing State Capacity Inputs against Income-Adjusted Outcomes",
    "fontSize": 14,
    "subtitleFontSize": 11,
    "anchor": "middle"
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/kumarrajesh1992-arch/kumarrajesh1992-arch.github.io/refs/heads/main/project/data/PC6_State_Capacity.csv"
  },
  "params": [
    {
      "name": "Select_Index", 
      "value": "health_index",
      "bind": {
        "input": "select",
        "options": ["health_index", "education_index"],
        "labels": ["NITI Aayog Health Index", "NITI Aayog Education Index"],
        "name": "Select Index: "
      }
    }
  ],
  "transform": [
    {
      "fold": ["health_index", "education_index"],
      "as": ["Indicator", "Score"]
    },
    {
      "filter": "datum.Indicator == Select_Index"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 100,
        "color": "#4c78a8",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Score",
          "type": "quantitative",
          "scale": {"domain": [0, 100]},
          "title": "Index Score (0-100)"
        },
        "y": {
          "field": "residual_HDI",
          "type": "quantitative",
          "title": "Residual HDI (Outcome Efficiency)"
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Score", "type": "quantitative", "title": "Index Score"},
          {"field": "residual_HDI", "type": "quantitative", "title": "Residual HDI", "format": ".3f"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick",
        "strokeDash": [4, 4],
        "opacity": 0.8
      },
      "transform": [
        {
          "regression": "residual_HDI",
          "on": "Score"
        }
      ],
      "encoding": {
        "x": {"field": "Score", "type": "quantitative"},
        "y": {"field": "residual_HDI", "type": "quantitative"}
      }
    }
  ]
}

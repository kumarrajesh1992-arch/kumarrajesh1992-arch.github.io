{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "The Employment Disconnect",
    "subtitle": "States ranked by Employment Rate (WPR) vs. Development Efficiency",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "middle"
  },
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/kumarrajesh1992-arch/kumarrajesh1992-arch.github.io/refs/heads/main/project/PC7_Data.csv"
  },
  "transform": [
    {
      "calculate": "datum.residual_HDI >= 0 ? 'Over-Performer' : 'Under-Performer'",
      "as": "Performance"
    }
  ],
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "sort": {"field": "WPR", "order": "descending"},
      "axis": {
        "labelAngle": -45,
        "title": "States (Sorted by Highest to Lowest Worker-Population Ratio)"
      }
    },
    "y": {
      "field": "residual_HDI",
      "type": "quantitative",
      "title": "Residual HDI (Outcome Efficiency)"
    }
  },
  "layer": [
    {
      "mark": {"type": "rule", "size": 2},
      "encoding": {
        "color": {
          "field": "Performance",
          "scale": {
            "domain": ["Over-Performer", "Under-Performer"],
            "range": ["#2ca02c", "#d62728"]
          },
          "legend": {"title": "Efficiency Status"}
        }
      }
    },
    {
      "mark": {"type": "circle", "size": 100, "filled": true},
      "encoding": {
        "color": {"field": "Performance"},
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {
            "field": "WPR",
            "type": "quantitative",
            "title": "Workers Population Ratio (%)"
          },
          {
            "field": "residual_HDI",
            "type": "quantitative",
            "title": "Residual HDI",
            "format": ".4f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [4, 4],
        "color": "gray",
        "opacity": 0.5
      },
      "encoding": {"y": {"datum": 0}}
    }
  ],
  "config": {}
}
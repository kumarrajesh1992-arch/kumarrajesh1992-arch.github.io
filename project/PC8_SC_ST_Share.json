{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Structural Constraints: Social Identity vs. Efficiency",
    "subtitle": "Impact of SC and ST population shares on income-adjusted HDI",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "middle",
    "offset": 20
  },
  "data": {
    "url": "https://raw.githubusercontent.com/kumarrajesh1992-arch/kumarrajesh1992-arch.github.io/refs/heads/main/project/PC8_SC_ST_ResidualHDI_StateLevel.csv"
  },
  "transform": [
    {
      "fold": ["SC_share", "ST_share"],
      "as": ["Social_Group", "Percentage"]
    },
    {
      "calculate": "datum.Social_Group == 'SC_share' ? 'Scheduled Caste Share (%)' : 'Scheduled Tribe Share (%)'",
      "as": "Group_Label"
    }
  ],
  "facet": {
    "column": {
      "field": "Group_Label",
      "header": {"title": null, "labelFontSize": 13, "labelFontWeight": "bold"}
    }
  },
  "spec": {
    "width": 300,
    "height": 300,
    "layer": [
      {
        "mark": {
          "type": "point",
          "filled": true,
          "size": 80,
          "opacity": 0.7
        },
        "encoding": {
          "x": {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Population Share (%)"
          },
          "y": {
            "field": "residual_HDI",
            "type": "quantitative",
            "title": "Residual HDI"
          },
          "color": {
            "field": "Social_Group",
            "scale": {"range": ["#d62728", "#1f77b4"]},
            "legend": null
          },
          "tooltip": [
            {"field": "State", "type": "nominal"},
            {"field": "Percentage", "type": "quantitative", "format": ".1f"},
            {"field": "residual_HDI", "type": "quantitative", "format": ".3f"}
          ]
        }
      },
      {
        "mark": {
          "type": "line",
          "color": "black",
          "strokeDash": [4, 4],
          "opacity": 0.6
        },
        "transform": [
          {
            "regression": "residual_HDI",
            "on": "Percentage"
          }
        ],
        "encoding": {
          "x": {"field": "Percentage", "type": "quantitative"},
          "y": {"field": "residual_HDI", "type": "quantitative"}
        }
      }
    ]
  },
  "resolve": {
    "scale": {"x": "independent"}
  }
}
